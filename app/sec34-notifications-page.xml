
<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" text="Time Action Notifications"/>
      <Button col="1" row="0" class="HeaderLabel" text="FR" tap="switchToFrench"/>
    </GridLayout>
<ScrollView>
    <StackLayout orientation="vertical">
      <label class="DayCalc_SectionTitle" text="Desired Notifications"/>
      <GridLayout columns="auto,auto" rows="auto,auto" style="horizontal-align:center;">
        <label class="Home_NavLabel" row="0" col="0" text="Submission Notifications"/>
        <label class="Home_NavLabel" row="1" col="0" text="Approval Notifications"/>
        
        <Switch row="0" col="1" checked="{{ submissionCheck }}"/>
        <Switch row="1" col="1" checked="{{ approvalCheck }}"/>
        
      </GridLayout>
      <label class="DayCalc_SectionTitle" text="Weeks to Repeat Notifications"/>
      <TextField class="DayCalc_TextField" keyboardType="number" text="{{ numberOfWeeks }}" />

      <Button class="DayCalc_SubmitButton" text="Set Notifications" tap="setNotification"/>

      

      </StackLayout>
      </ScrollView>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>