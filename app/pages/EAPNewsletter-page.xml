<Page loaded="pageLoaded" actionBarHidden="false">
    <Page.ActionBar>
        <ActionBar title="{{ actionBarTitle }}" class="Action_Bar" > <!--style="background-color: rgb(0,31,91); color: white; weight: bold; font-size: 20pt; horizontal-align: center; border-bottom-width: 6px; border-bottom-color: rgb(220,170,0);">-->
            <Label class="action-bar-title" text="{{ actionBarTitle }}"></Label>
            <ActionItem tap="goBack"
                ios.systemIcon="8" ios.position="right"
                android.systemIcon="ic_menu_back" android.position="actionBar">
            </ActionItem>
        </ActionBar>
    </Page.ActionBar>

    <GridLayout rows="*,60" id="pageGridLayout">
        <StackLayout row="0" orientation="vertical" width="100%">
            <ScrollView orientation="vertical" id="pageScrollView" height="100%" width="100%" pan="onWVPan" scroll="onSVScroll" >
                <!--<StackLayout class="Article_MainStack" id="articleContent" width="100%" height="100%" orientation="vertical">-->
                    <WebView loaded="onWebViewLoaded" loadStarted="onLoadStarted" height="auto" width="100%" id="myWebView" src="{{ ArticleHTML }}" />
                <!--</StackLayout>-->
            </ScrollView>
        </StackLayout>
        
        <StackLayout row="1" class="FooterNav" orientation="horizontal" height="60" id="NavigationBar">
            <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
            <Button class="Footer_NavIcon" text="&#xe994;"  width="20%" tap="footer3"/>
            <Image class="Footer_NavIcon_Image" src="~/images/hr-go-ui-icon_alpha.png" width="20%" height="80px"></Image>
            <Button class="Footer_NavIcon" text="&#xe970;"  width="20%" tap="footer4"/>
            <Button class="Footer_NavIcon" text="&#xe923;"  width="20%" tap ="footer5"/>
        </StackLayout>
    </GridLayout>
</Page>