<Page loaded="pageLoaded" actionBarHidden="false">
    <Page.ActionBar>
        <ActionBar title="{{ actionBarTitle }}" style="background-color: #3C5AFD; color: white; weight: bold; font-size: 20pt; horizontal-align: center;">
        <Label class="action-bar-title" text="{{ actionBarTitle }}"></Label>
            <ActionItem tap="goBack"
                ios.systemIcon="8" ios.position="right"
                android.systemIcon="ic_menu_back" android.position="actionBar"></ActionItem>
        </ActionBar>
    </Page.ActionBar>
    
    <ScrollView orientation="vertical" id="pageScrollView" height="100%" width="100%">
        <StackLayout class="Article_MainStack" id="articleContent" width="100%" height="100%" orientation="vertical">
            <WebView loaded="onWebViewLoaded" loadStarted="onLoadStarted" swipe="onWVSwipe" minHeight="250" height="100%" id="myWebView" src="{{ ArticleHTML }}" />
        </StackLayout>
    </ScrollView>
</Page>