    <GridLayout rows="auto,*,60" id="pageGridLayout">
        <StackLayout row="0" >
            <GridLayout columns="60,*,60" rows="auto" class="HeaderLabel">
                <label col="0" row="0" class="Header_Icon" text="&#xe9da;"/>
                <label col="1" row="0" text="{{ actionBarTitle }}" class="Header_Label"/>
                <Button col="2" row="0" text="&#xe967;" class="Back_Button" tap="goBack"/>
            </GridLayout>
        </StackLayout>
        <StackLayout row="1" orientation="vertical" width="100%">
            <ScrollView orientation="vertical" id="pageScrollView" height="100%" width="100%" >
                <!--<StackLayout class="Article_MainStack" id="articleContent" width="100%" height="100%" orientation="vertical">-->
                    <WebView loaded="onWebViewLoaded" loadStarted="onLoadStarted" height="auto" width="100%" id="myWebView" src="{{ ArticleHTML }}" />
                <!--</StackLayout>-->
            </ScrollView>
        </StackLayout>
        
        <StackLayout row="2" class="FooterNav" orientation="horizontal" height="60" id="NavigationBar">
            <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
            <Button class="Footer_NavIcon" text="&#xe994;"  width="20%" tap="footer3"/>
            <Image class="Footer_NavIcon_Image" src="~/images/hr-go-ui-icon_alpha.png" width="20%" height="80px"></Image>
            <Button class="Footer_NavIcon" text="&#xe970;"  width="20%" tap="footer4"/>
            <Button class="Footer_NavIcon" text="&#xe923;"  width="20%" tap ="footer5"/>
        </StackLayout>
    </GridLayout>
</Page>