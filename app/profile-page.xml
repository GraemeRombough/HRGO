
<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <label class="HeaderLabel" text="Working Days Calculator"/>
<ScrollView>
    <StackLayout orientation="vertical">
      <label class="DayCalc_SectionTitle" text="Preferred Language"/>
      <GridLayout columns="40%,20%,40%", rows="auto" style="horizontal-align:center;">
        <label class="Home_NavLabel" row="0" col="0" text="English"/>
        <Switch row="0" col="1" checked="{{ EngFreCheck }}"/>
        <label class="Home_NavLabel" row="0" col="2" text="French"/>
      </GridLayout>
      
        <label class="DayCalc_SectionTitle" text="Work Email"/>
      
        <TextField class="DayCalc_TextField" text="{{ workEmail }}" />
        <Button class="DayCalc_SubmitButton" text="Save Profile" tap="setNotification"/>
    </StackLayout>
</ScrollView>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>