
<Page loaded="pageLoaded" actionBarHidden="true"
    xmlns:CustomControls="custom-controls">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,auto">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="60,*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" class="Header_Icon" text="&#xe923;"/>
      <label col="1" row="0" text="PARAMÈTRES" class="Header_Label"/>
      <Button col="2" row="0" text="&#xe967;" class="Back_Button" tap="goBack"/>
    </GridLayout>
<ScrollView>
    <StackLayout orientation="vertical">
      <label class="DayCalc_SectionTitle" text="Langue"/>
      <GridLayout columns="*,*">
        <Button class="Submit_Button_1" col="0" text="English" tap="setToEng" id="EnglishButton"/>
        <Button class="Submit_Button_1" col="1" text="Français" tap="setToFre" id="FrenchButton"/>
      </GridLayout>
      
        <label class="DayCalc_SectionTitle" text="Courriel de travail"/>
      
        <TextField class="Utility_TextBox" text="{{ workEmail }}" />
        <Button class="Submit_Button_1" text="Enregistrer le profil" tap="saveProfile"/>
        <Button class="Submit_Button_1" text="Termes et conditions" tap="viewTerms"/>
    </StackLayout>
</ScrollView>
  </StackLayout>
      
    
    <CustomControls:NavFooter row="1" />

    </GridLayout>

  <!-- Your UI components go here -->

</Page>