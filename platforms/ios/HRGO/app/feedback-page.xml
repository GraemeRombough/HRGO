<Page loaded="pageLoaded" navigatingTo="onNavigatingTo" actionBarHidden="true">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <ScrollView>
    <StackLayout row="0" orientation="vertical" width="100%">
      
    <GridLayout columns="60,*" rows="auto" class="HeaderLabel">
      <label col="0" row="0" class="Header_Icon" text="&#xe923;"/>
      <label col="1" row="0" text="FEEDBACK" class="Header_Label"/>
    </GridLayout>

      <!-- COMPOSE EMAIL -->
      <StackLayout>
        <Label text="Your Feedback" class="Article_H1"/>
        <Label text="Comments" class="Article_H3"/>
        <TextView text="{{ feedbackBody }}" class="Utility_LongText"/>
        <Button text="Submit Feedback by Email" class="DayCalc_SubmitButton" tap="sendEmail"/>
      </StackLayout>
    </StackLayout>  
  </ScrollView>
  <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
  </StackLayout>
  </GridLayout>

  <!-- Your UI components go here -->

</Page>