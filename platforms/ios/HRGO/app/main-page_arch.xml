<Page loaded="pageLoaded">
  <ActionBar title="Home" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <label class="HeaderLabel" text="Home"/>
    <StackLayout orientation="horizontal" class="SearchBar">
      <Button col="0" class="SearchBar_Button" tap="searchLanding">
          <FormattedString>
            <Span text="&#xe986;"/>
          </FormattedString>
      </Button>
      <TextField col="1" class="SearchBar_Text" text="{{ SearchCriteria }}" id="SearchBox" hint="Search"/>
    </StackLayout>
      <StackLayout width="100%" orientation="horizontal">
        <Button class="Home_NavButton" tap="goToLanding">
          <FormattedString>
            <Span class="Home_NavIcon" text="&#xe93b;"/>
          </FormattedString>
        </Button>
        <Button class="Home_NavButton">
          <FormattedString>
            <Span class="Home_NavIcon" text="&#xe972;"/>
          </FormattedString>
        </Button>
        <Button class="Home_NavButton">
          <FormattedString>
            <Span class="Home_NavIcon" text="&#xe9bc;"/>
          </FormattedString>
        </Button>
      </StackLayout>

      <StackLayout width="100%" orientation="horizontal">
        <Button class="Home_NavLabel" text="Pay" />
        <Button class="Home_NavLabel" text="Talent Acquisition" />
        <Button class="Home_NavLabel" text="Position Management" />

      </StackLayout>
    </StackLayout>

    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%" tap="goToTest"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%" tap="footer3"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%" tap="footer4"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->
</Page>