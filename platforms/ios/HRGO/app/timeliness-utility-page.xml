
<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" text="Working Days Calculator"/>
      <Button col="1" row="0" class="HeaderLabel" text="FR" tap="switchToFrench"/>
    </GridLayout>
<ScrollView>
    <StackLayout orientation="vertical">
      <label class="DayCalc_SectionTitle" text="Start Date"/>
      <DatePicker loaded="onDatePickerLoaded" date="{{ date }}"></DatePicker>
      <label class="DayCalc_SectionTitle" text="Days of Work"/>
      <GridLayout columns="auto,auto" rows="auto,auto,auto,auto,auto,auto,auto" style="horizontal-align:center;">
        <label class="Home_NavLabel" row="0" col="0" text="Sunday"/>
        <label class="Home_NavLabel" row="1" col="0" text="Monday"/>
        <label class="Home_NavLabel" row="2" col="0" text="Tuesday"/>
        <label class="Home_NavLabel" row="3" col="0" text="Wednesday"/>
        <label class="Home_NavLabel" row="4" col="0" text="Thursday"/>
        <label class="Home_NavLabel" row="5" col="0" text="Friday"/>
        <label class="Home_NavLabel" row="6" col="0" text="Saturday"/>
        <Switch row="0" col="1" checked="{{ sundayCheck }}"/>
        <Switch row="1" col="1" checked="{{ mondayCheck }}"/>
        <Switch row="2" col="1" checked="{{ tuesdayCheck }}"/>
        <Switch row="3" col="1" checked="{{ wednesdayCheck }}"/>
        <Switch row="4" col="1" checked="{{ thursdayCheck }}"/>
        <Switch row="5" col="1" checked="{{ fridayCheck }}"/>
        <Switch row="6" col="1" checked="{{ saturdayCheck }}"/>
      </GridLayout>
      <label class="DayCalc_SectionTitle" text="Number of Days"/>
      <TextField class="DayCalc_TextField" keyboardType="number" text="{{ numberOfDays }}" />

      <label class="DayCalc_StartDate" text="{{ endDateLabel }}"/>

      <Button class="DayCalc_SubmitButton" text="Get End Date" tap="setNotification"/>

      

      </StackLayout>
      </ScrollView>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>