<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" text="Reference &amp; Calculators"/>
      <Button col="1" row="0" class="HeaderLabel" text="FR" tap="switchToFrench"/>
    </GridLayout>

    <StackLayout orientation="vertical">
      <Button class="Landing_Nav" text="Day Calculators" tap="navToggle" value="DayCalculator"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Working Day Calculator" tap="goToUtility" pageName="workdays-utility-page" visibility="{{ DayCalculator ? 'visible' : 'collapsed' }}"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Section 34 Timeliness Calculator" tap="goToUtility" pageName="timeliness-utility-page" visibility="{{ DayCalculator ? 'visible' : 'collapsed' }}"/>
      <Button class="Landing_Nav" text="Salary Calculators" tap="navToggle" value="SalaryCalculator"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Gross Salary Calculator" tap="goToSalary" visibility="{{ SalaryCalculator ? 'visible' : 'collapsed' }}"/>
      <Button class="Landing_Nav" text="Notification Tools" tap="navToggle" value="Notification"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Time Approval Notifications" tap="goToUtility" pageName="sec34-notifications-page" visibility="{{ Notification ? 'visible' : 'collapsed' }}"/>

    </StackLayout>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>