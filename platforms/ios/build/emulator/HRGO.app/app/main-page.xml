<Page actionBarHidden="true" loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,auto">
  
  
  
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="60,*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" class="Header_Icon" text="&#xe902;"/>
      <label col="1" row="0" text="HOME" class="Header_Label"/>
      <Button col="2" row="0" text="&#xe967;" class="Back_Button" tap="goBack"/>
    </GridLayout>
      
      <ScrollView>
      <StackLayout orientation="vertical">
      <GridLayout columns="*,*" rows="auto,auto,auto" visibility="collapsed" id="languageSelection">
        <label class="Utility_TableText_1" col="0" row="0" colSpan="2" text="Select a preferred language."/>
        <label class="Utility_TableText_1" col="0" row="1" colSpan="2" text="Choisissez votre langue préférée."/>
        <Button class="Submit_Button_1" col="0" row="2" text="English" tap="setToEng" id="EnglishButton"/>
        <Button class="Submit_Button_1" col="1" row="2" text="Français" tap="setToFre" id="FrenchButton"/>
      </GridLayout>
        <StackLayout orientation="horizontal" class="Home_Nav_Row">
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe93b;" tap="goToUtility" pageName="pay-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="PAY" tap="goToUtility" pageName="pay-landing-page"/>
          </GridLayout>
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe940;" tap="goToUtility" pageName="calculators-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="CALCULATORS" tap="goToUtility" pageName="calculators-landing-page"/>
          </GridLayout>
        </StackLayout> 

        <StackLayout orientation="horizontal" class="Home_Nav_Row">
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe972;" tap="goToUtility" pageName="student-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="STUDENTS" tap="goToUtility" pageName="student-landing-page"/>
          </GridLayout>
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe9b8;" tap="goToUtility" pageName="tracking-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="TRACKING" tap="goToUtility" pageName="tracking-landing-page"/>
          </GridLayout>
        </StackLayout> 

        <StackLayout orientation="horizontal" class="Home_Nav_Row">
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe926;" tap="goToUtility" pageName="lookup-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="LOOKUP" tap="goToUtility" pageName="lookup-landing-page"/>
          </GridLayout>
          <GridLayout class="Home_Nav_Grid" rows="auto, auto">
            <Button row="0" class="Home_Nav_Icon" text="&#xe923;" tap="goToUtility" pageName="contact-landing-page"/>
            <Button row="1" class="Home_Nav_Label" text="CONTACT" tap="goToUtility" pageName="contact-landing-page"/>
          </GridLayout>
        </StackLayout>   

      </StackLayout>

      </ScrollView>
    </StackLayout>
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%" tap="footer3"/>
        <Image class="Footer_NavIcon_Image" src="~/images/hr-go-ui-icon_alpha.png" width="20%" height="80px"></Image>
        <Button class="Footer_NavIcon" text="&#xe970;"  width="20%" tap="footer4"/>
        <Button class="Footer_NavIcon" text="&#xe923;"  width="20%" tap ="footer5"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->
</Page>