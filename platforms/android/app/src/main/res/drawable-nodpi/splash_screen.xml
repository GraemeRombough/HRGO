<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="fill">
    <item>
        <bitmap android:gravity="fill" android:src="@drawable/background" />
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/logo" />
    </item>
    <item>
        <bitmap android:gravity="right|bottom" android:layout_margin="10dp" android:src="@drawable/canada" />
    </item>
    <item android:top="7dp" android:left="7dp">
        <bitmap android:gravity="left|top" android:layout_margin="10dp" android:src="@drawable/dnd" />
    </item>
</layer-list>