<Page loaded="pageLoaded" navigatingTo="onNavigatingTo">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <ScrollView>
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="60,*" rows="auto" class="HeaderLabel">
      <label col="0" row="0" class="Header_Icon" text="&#xe991;"/>
      <label col="1" row="0" text="OUR ROLES" class="Header_Label"/>
    </GridLayout>
    
    <!-- Sections -->
    <Button text="Section" class="Home_Utility_Label" tap="navToggle" value="Section" />
    <StackLayout visibility="{{ Section ? 'visible' : 'collapsed' }}" id="sectionLayout">
      <Button text="Extra Duty Pay" class="Main_Nav_SubLine" tap="loadRoles"/>
    </StackLayout>

  <!-- Items -->
    <Button text="Item" class="Home_Utility_Label" tap="navToggle" value="Item" />
    <StackLayout visibility="{{ Item ? 'visible' : 'collapsed' }}"  id="itemLayout">
      <Button text="Employee" class="Main_Nav_SubLine" tap="loadResponsibilities"/>
    </StackLayout>

  <!-- Descriptions -->
  <Button text="Description" class="Home_Utility_Label" tap="navToggle" value="Descriptions" />
    <StackLayout class="Article_MainStack" id="descriptionContent" width="100%" orientation="vertical" visibility="{{ Descriptions ? 'visible' : 'collapsed' }}">
      <Label text="Stuff here" class="Article_Body"/>
    </StackLayout>

  </StackLayout>
  </ScrollView>
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>