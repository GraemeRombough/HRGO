<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="*,60" rows="auto" class="HeaderLabel">
      <label col="0" row="0" text="Home"/>
      <Button col="1" row="0" class="HeaderLabel" text="EN" tap="switchToEnglish"/>
    </GridLayout>
    <StackLayout orientation="horizontal" class="SearchBar">
      <Button col="0" class="SearchBar_Button" tap="searchLanding">
          <FormattedString>
            <Span text="&#xe986;"/>
          </FormattedString>
      </Button>
      <TextField col="1" class="SearchBar_Text" text="{{ SearchCriteria }}" id="SearchBox" hint="Search"/>
    </StackLayout>
      <StackLayout width="100%" orientation="vertical">
        <GridLayout columns="60,*" rows="auto" class="Home_Utility_Row">
          <Button class="Home_Utility_Button" tap="goToRefCalc" col="0">
            <FormattedString>
              <Span class="Home_Utility_Icon" text="&#xe93b;"/>
            </FormattedString>
          </Button>
          <Button class="Home_Utility_Label" text="Reference &amp; Calculators" tap="goToRefCalc" col="1"/>
        </GridLayout>
        <GridLayout columns="60,*" rows="auto" class="Home_Utility_Row">
          <Button class="Home_Utility_Button" tap="goToConnect" col="0">
            <FormattedString>
              <Span class="Home_Utility_Icon" text="&#xe972;"/>
            </FormattedString>
          </Button>
          <Button class="Home_Utility_Label" text="Connect" tap="goToConnect" col="1"/>
        </GridLayout>
      </StackLayout>
    </StackLayout>
        <!--
        <Button class="Home_NavButton">
          <FormattedString>
            <Span class="Home_NavIcon" text="&#xe972;"/>
          </FormattedString>
        </Button>
        <Button class="Home_NavButton">
          <FormattedString>
            <Span class="Home_NavIcon" text="&#xe9bc;"/>
          </FormattedString>
        </Button>
      </StackLayout>

      <StackLayout width="100%" orientation="horizontal">
        
        <Button class="Home_NavLabel" text="Talent Acquisition" />
        <Button class="Home_NavLabel" text="Position Management" />

      </StackLayout>
    </StackLayout>
