<Page loaded="pageLoaded">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <label class="HeaderLabel" text="Reference &amp; Calculators"/>

    <StackLayout orientation="vertical">
      <Button class="Landing_Nav" text="Day Calculators" tap="navToggle" value="DayCalculator"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Working Day Calculator" tap="goToWorkingDay" visibility="{{ DayCalculator ? 'visible' : 'collapsed' }}"/>
      <Button class="Landing_Nav" text="Salary Calculators" tap="navToggle" value="SalaryCalculator"/>
        <Button class="Landing_SubNav_Compensation" id="2" text="Gross Salary Calculator" tap="goToSalary" visibility="{{ SalaryCalculator ? 'visible' : 'collapsed' }}"/>
    </StackLayout>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>