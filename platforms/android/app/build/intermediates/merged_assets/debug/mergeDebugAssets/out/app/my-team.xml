<Page loaded="pageLoaded" navigatingTo="onNavigatingTo">
  <ActionBar title="Pay Info" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <ScrollView>
  <StackLayout row="0" orientation="vertical" width="100%">
    <Label text="Add New Employee" class="Article_H1"/>
    <Label text="Name" class="Article_H3"/>
    <TextField text="{{ employeeName }}" class="DayCalc_TextField"/>
    <Label text="Email" class="Article_H3"/>
    <TextField text="{{ employeeEmail }}" keyboardtype="email" class="DayCalc_TextField"/>
    <Button text="Add Employee" tap="addEmployee" class="DayCalc_SubmitButton"/>
    <!-- TEAM LIST -->
    <Label text="My Team Members" class="Article_H1"/>
    <StackLayout id="teamListStack">
    </StackLayout>

    <!-- COMPOSE EMAIL -->
    <StackLayout>
      <Label text="Compose Email to Team" class="Article_H1"/>
      <Label text="Email Subject" class="Article_H3"/>
      <TextField text="{{ emailSubject }}" class="DayCalc_TextField" style="width:100%; font-size: 16px; height:28;"/>
      <Label text="Email Body" class="Article_H3"/>
      <TextView text="{{ emailBody }}" class="DayCalc_TextField" style="width:100%; font-size: 16px; height:80;"/>
      <Button text="Send Email to Team" class="DayCalc_SubmitButton" tap="sendEmail"/>
    </StackLayout>
  </StackLayout>  
  </ScrollView>
  <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
  </StackLayout>
  

    </GridLayout>

  <!-- Your UI components go here -->

</Page>