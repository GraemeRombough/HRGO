<Page loaded="pageLoaded" navigatingTo="onNavigatingTo">
  <ActionBar title="HR GO" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <ScrollView>
  <StackLayout row="0" orientation="vertical" width="100%">
    
    <StackLayout visibility="{{ infoVisible ? 'visible' : 'collapsed'}}">
      <Label text="Classification" class="Article_H2"/>
      <ListPicker id="classPicker" items="{{ classItems }}" selectedIndex="{{ classIndex }}" loaded="onClassListPickerLoaded" class="p-15 picker" visibility="visible"/>

      <Label text="Step" class="Article_H2"/>
      <ListPicker items="{{ stepItems }}" selectedIndex="{{ stepIndex }}" loaded="onStepListPickerLoaded" class="p-15 picker"/>
      <!--<TextField class="DayCalc_TextField" keyboardType="number" text="{{ stepNumber }}" />-->
      <Button class="DayCalc_SubmitButton" text="Get Salary Info" tap="getSalaryInfo"/>
    </StackLayout>
    <!-- SALARY INFO SECTION-->
      <GridLayout visibility="{{ salaryVisible ? 'visible' : 'collapsed'}}" orientation="vertical" columns="auto,*" rows="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto">
        <Button col="0" row="0" colSpan="3" class="DayCalc_SubmitButton" text="Re Enter Info" tap="resetSelections"/>
        <Label col="0" row="1" colSpan="2" text="Salary Info" class="Article_H2"/>
        <Label col="0" row="2" colSpan="2" text="Annual Gross Salary" class="Article_H3"/>
        <Label col="0" row="3" class="Article_Body" text="{{ annualRate }}"/>
        <TextField col="1" row="3" class="DayCalc_TextField" keyboardType="number" text="{{ annualNumber }}" />
        <Label col="0" row="4" text="BiWeekly Pay Rate" class="Article_H3"/>
        <Label col="0" row="5" class="Article_Body" text="{{ biweeklyRate}}"/>
        <TextField col="1" row="5" class="DayCalc_TextField" keyboardType="number" text="{{ biweeklyNumber }}" />
        <Label col="0" row="6" text="Daily Pay Rate" class="Article_H3"/>
        <Label col="0" row="7" class="Article_Body" text="{{ dailyRate }}"/>
        <TextField col="1" row="7" class="DayCalc_TextField" keyboardType="number" text="{{ dailyNumber }}" />
        <Label col="0" row="8" text="Hourly Gross Salary" class="Article_H3"/>
        <Label col="0" row="9" class="Article_Body" text="{{ hourlyRate }}"/>
        <TextField col="1" row="9" class="DayCalc_TextField" keyboardType="number" text="{{ hourlyNumber }}" />
        <Label col="0" row="10" colSpan="2" text="Overtime Hourly Gross Salary (x1.5)" class="Article_H3"/>
        <Label col="0" row="11" class="Article_Body" text="{{ overtime1Rate }}"/>
        <TextField col="1" row="11" class="DayCalc_TextField" keyboardType="number" text="{{ overtime1Number }}" />

        <Button col="0" row="12" colSpan="3" class="DayCalc_SubmitButton" text="Calculate Totals" tap="getCalculatedInfo"/>
        <Label col="0" row="13" colSpan="3" class="Article_Body" text="{{ calculatedMoney }}"/>
      </GridLayout>
      

    

  </StackLayout>
  </ScrollView>
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>