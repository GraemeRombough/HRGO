<Page loaded="pageLoaded">
  <ActionBar title="Compensation" class="action-bar"></ActionBar>
  <GridLayout rows="*,60">
  <StackLayout row="0" orientation="vertical" width="100%">
    <GridLayout columns="60,*" rows="auto" class="HeaderLabel">
      <label col="0" row="0" class="Header_Icon" text="&#xe93b;"/>
      <label col="1" row="0" text="MY PAY" class="Header_Label"/>
    </GridLayout>

    <StackLayout orientation="vertical">
      <Button class="Sub_Nav_Line" text="Your Pay Information" tap="navToggle" value="YourPayInformation"/>
        <Button class="Main_Nav_SubLine" id="2" text="Acting Pay" tap="goToArticle" visibility="{{ YourPayInformation ? 'visible' : 'collapsed' }}"/>
        <Button class="Main_Nav_SubLine" id="1" text="Overtime" tap="goToArticle" visibility="{{ YourPayInformation ? 'visible' : 'collapsed' }}"/>
        <Button class="Main_Nav_SubLine" id="3" text="Part-time Employment" tap="goToArticle" visibility="{{ YourPayInformation ? 'visible' : 'collapsed' }}"/>
        <Button class="Main_Nav_SubLine" id="7" text="Enter Overtime in Phoenix" tap="goToWalkthrough" visibility="{{ YourPayInformation ? 'visible' : 'collapsed' }}"/>
      <Button class="Sub_Nav_Line" text="Problems With Your Pay" tap="navToggle" value="ProblemsWithYourPay"/>
        <Button class="Main_Nav_SubLine" id="4" text="Emergency Salary Advance" tap="goToArticle" visibility="{{ ProblemsWithYourPay ? 'visible' : 'collapsed' }}"/>
        <Button class="Main_Nav_SubLine" id="5" text="Report Your Pay Issue" tap="goToArticle" visibility="{{ ProblemsWithYourPay ? 'visible' : 'collapsed' }}"/>
        <Button class="Main_Nav_SubLine" id="6" text="Priority Payment on Non-Basic Pay" tap="goToArticle" visibility="{{ ProblemsWithYourPay ? 'visible' : 'collapsed' }}"/>
    
    
    </StackLayout>
  </StackLayout>
      
    
    <StackLayout row="1" class="FooterNav" orientation="horizontal">
        <Button class="Footer_NavIcon" text="&#xe902;" width="20%" tap="goToHome"/>
        <Button class="Footer_NavIcon" text="&#xe904;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe994;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe945;"  width="20%"/>
        <Button class="Footer_NavIcon" text="&#xe953;"  width="20%"/>
      </StackLayout>

    </GridLayout>

  <!-- Your UI components go here -->

</Page>